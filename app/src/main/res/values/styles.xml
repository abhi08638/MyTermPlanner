<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/lightBackground</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">
        <item name="colorPrimary">?attr/colorAccent</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="coloredBtn" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppThemeBlue" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
    </style>

    <style name="AppThemeGreen" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
    </style>

    <style name="AppThemeRed" parent="AppTheme" >
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRed</item>
        <item name="colorPrimary">@color/colorPrimaryRed</item>
        <item name="colorAccent">@color/colorAccentRed</item>
    </style>
    
    <style name="AlertSpinnerBackground">
        <item name="android:background">@android:drawable/editbox_dropdown_light_frame</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.DayNight" />
    <style name="InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingTop">@dimen/input_label_vertical_spacing</item>
        <item name="android:paddingLeft">@dimen/input_label_horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/input_label_horizontal_spacing</item>
        <item name="android:layout_marginLeft">@dimen/input_label_horizontal_margin</item>
    </style>
    <style name="InputMarginTitle">
        <item name="android:layout_marginLeft">@dimen/input_margin</item>
        <item name="android:layout_marginRight">@dimen/input_margin</item>
        <item name="android:paddingLeft">@dimen/input_padding</item>
        <item name="android:paddingRight">@dimen/input_padding</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">28dp</item>
        <item name="android:inputType">textCapWords|textAutoCorrect|textAutoComplete|textMultiLine</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="InputMargin">
        <item name="android:layout_marginLeft">@dimen/input_margin</item>
        <item name="android:layout_marginRight">@dimen/input_margin</item>
        <item name="android:paddingLeft">@dimen/input_padding</item>
        <item name="android:paddingRight">@dimen/input_padding</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textAutoCorrect|textCapSentences|textAutoComplete|textMultiLine</item>
    </style>
    <style name="InputMarginDate">
        <item name="android:layout_marginLeft">@dimen/input_margin</item>
        <item name="android:layout_marginRight">@dimen/input_margin</item>
        <item name="android:paddingLeft">@dimen/input_padding</item>
        <item name="android:paddingRight">@dimen/input_padding</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">none|textNoSuggestions</item>
    </style>
    <style name="InputMarginSpinner">
        <item name="android:layout_marginLeft">@dimen/input_margin</item>
        <item name="android:layout_marginRight">@dimen/input_margin</item>
        <item name="android:ems">10</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">?attr/colorAccent</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    
    <style name="detailPage">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fillViewport">false</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">1dp</item>
    </style>

</resources>
